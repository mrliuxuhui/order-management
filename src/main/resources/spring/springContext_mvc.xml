	<mvc:resources mapping="/libs.img/**" location="/libs.img/" />
	<mvc:resources mapping="/jslib/**" location="/jslib/"/>
	<mvc:resources mapping="/static/**" location="/static/"/>
	<mvc:resources mapping="/images/**" location="/images/"/> -->
</beans>
